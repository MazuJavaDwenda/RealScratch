{
  "manifest_version": 3,
  "name": "RealScratch",
  "version": "1.0",
  "description": "Collaborate on Scratch projects in real-time with other users.",
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "tabs",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://scratch.mit.edu/projects/*/editor*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://scratch.mit.edu/*",
    "wss://*/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 